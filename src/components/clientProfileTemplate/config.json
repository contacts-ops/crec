{
  "id": "clientProfileTemplate",
  "name": "Client Profile Template",
  "type": "admin",
  "service": "admin",
  "thumbnail": "/placeholder.svg",
  "description": "Interface de gestion du profil utilisateur connecté avec modification directe des champs et affichage du dernier formulaire de domiciliation",
  "category": "client",
  "props": {
    "siteId": {
      "type": "string",
      "label": "ID du site (optionnel)",
      "default": "",
      "required": false
    },
    "userId": {
      "type": "string",
      "label": "ID de l'utilisateur (optionnel)",
      "default": "",
      "required": false
    }
  },
  "editableElements": [
    {
      "id": "profile-title",
      "type": "text",
      "label": "Titre de la page profil",
      "default": "Mon Profil"
    },
    {
      "id": "profile-subtitle",
      "type": "text",
      "label": "Sous-titre",
      "default": "Gérez vos informations personnelles et paramètres de compte"
    }
  ],
  "features": [
    "Affichage automatique du profil utilisateur connecté",
    "Modification directe des informations personnelles",
    "Changement de mot de passe sécurisé",
    "Affichage du dernier formulaire de domiciliation",
    "Gestion de l'avatar",
    "Statut du compte avec vérification des impayés",
    "Rôle utilisateur",
    "Dernière connexion",
    "Interface responsive",
    "Validation des données",
    "Messages d'état avec icônes",
    "Séparateurs visuels",
    "Badges de statut"
  ],
  "dependencies": [
    "lucide-react",
    "react",
    "typescript",
    "@radix-ui/react-separator"
  ],
  "apiEndpoints": [
    "/api/sharedServices/auth/me",
    "/api/sharedServices/utilisateurs/[id]",
    "/api/formulaires"
  ]
}