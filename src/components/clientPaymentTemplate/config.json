{
  "id": "clientPaymentTemplate",
  "name": "Client Payment Template",
  "type": "admin",
  "service": "admin",
  "thumbnail": "/placeholder.svg",
  "description": "Interface de gestion des paiements et moyens de paiement client",
  "category": "client",
  "props": {
    "siteId": {
      "type": "string",
      "label": "ID du site",
      "default": "",
      "required": false
    }
  },
  "editableElements": [
    {
      "id": "payment-title",
      "type": "text",
      "label": "Titre de la page paiements",
      "default": "Mes Paiements"
    },
    {
      "id": "payment-subtitle",
      "type": "text",
      "label": "Sous-titre",
      "default": "Gérez vos moyens de paiement et consultez vos transactions"
    }
  ],
  "features": [
    "Authentification automatique",
    "Gestion des moyens de paiement",
    "Historique des transactions",
    "Statuts de paiement",
    "Ajout/modification de cartes",
    "Interface responsive",
    "Validation des données",
    "Messages d'état",
    "Intégration Stripe réelle",
    "Stripe Elements pour l'ajout sécurisé de cartes"
  ],
  "dependencies": [
    "lucide-react",
    "react",
    "typescript",
    "@stripe/stripe-js",
    "@stripe/react-stripe-js"
  ],
  "apiEndpoints": [
    "/api/sharedServices/auth/me",
    "/api/sharedServices/stripe/get-public-key?siteId=[siteId]",
    "/api/sharedServices/stripe/payment-methods",
    "/api/sharedServices/stripe/users/[userId]/payment-methods",
    "/api/sharedServices/stripe/users/[userId]/transactions",
    "/api/sharedServices/stripe/failed-payments/[userId]"
  ]
}